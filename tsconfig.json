{
  "compilerOptions": {
    "target": "ES2015",
    "module": "es2015",
    "lib": ["dom", "dom.iterable", "es2017"],
    "jsxFactory": "MoleculeJsx.createElement",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "inlineSources": true,
    "experimentalDecorators": true
  }
}
